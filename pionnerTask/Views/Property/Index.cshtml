@model IEnumerable<CustomProperty>;

@{
    ViewData["Title"] = "Properties List";
}
<div class="container">
    <div class="row align-items-center mb-3">
        <div class="col-md-6">
            <h2>Custom Properties</h2>
        </div>
        <div class="col-md-6 text-end ">
            <a asp-action="Create" class="btn btn-primary btn-lg ">Create</a>
        </div>
</div>
    @if(Model.Count() > 0)
    {

        <table class="table table-hover">
            <thead>
                <tr class="table-primary">
                    <td>Name</td>
                    <td>Type</td>
                    <td>Required</td>
                    <td>Options</td>
                    <td>Actions</td>
                </tr>
            </thead>
            <tbody>
                
                    @foreach (var prop in Model)
    {
                    <tr>
                        <td>@prop.Name</td>
                        <td>@prop.Type</td>
                        @if (prop.IsRequired)
                        {
                            <td><button type="button" class="btn btn-success">Required</button></td>
                        }
                        else
                        {
                            <td><button type="button" class="btn btn-secondary">Not Required</button></td>
                        }
                        <td>
                            @if (prop.Options != null && prop.Options.Any())
                            {
                                <ul>
                                    @foreach (var option in prop.Options)
                                    {
                                        <li>@option</li>
                                    }
                                </ul>
                            }
                            else
                            {
                                <span>No options</span>
                            }
                        </td>
                        <td>
                            <a asp-action="Edit" class="btn btn-success" asp-route-Id="@prop.Id">Edit</a>
                            <a asp-action="Delete" class="btn btn-danger" asp-route-Id="@prop.Id">Delete</a>
                            <a asp-action="Details" class="btn btn-info" asp-route-Id="@prop.Id">Details</a>
                  
                        </td>
                    </tr>
                    }
                
            </tbody>
        </table>

    }
    else
    {
        <h2>No Properties To Show</h2>
    }
</div>